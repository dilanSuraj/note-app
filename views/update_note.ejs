  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i> All Notes</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Note</h2>
            <span class="text-light">Use the below form to Update an account</span>
        </div>

        <!-- add note form -->
         <!-- form handling -->
 <form method="POST" id="update_note">
    <div class="new_note">
        <div class="form-group">
            <label for="title" class="text-light">Title</label>
            <input type="hidden" name="id" value="<%= note._id %>">
            <input type="text" name="title" value="<%= note.title %>" placeholder="Mark Stoenis">
        </div>
        <div class="form-group">
            <label for="description" class="text-light">Description</label>
            <input type="hidden" name="id" value="<%= note._id %>">
            <input type="text" name="description" value="<%= note.description %>" placeholder="Mark Stoenis">
        </div>
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>
       
    </div>
